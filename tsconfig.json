  //   "@/services/*": ["src/services/*"],
  //   "@/utils/*": ["src/utils/*"],
  //   "@/types/*": ["src/types/*"]
  // }
  "paths": {
    "@/*": ["./src/*"]
  }
},
// "include": ["src"],
// "exclude": ["node_modules"]
"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
"exclude": ["node_modules"]
