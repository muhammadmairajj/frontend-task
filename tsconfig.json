{  
  "compilerOptions": {
  "baseUrl": ".",
  "target": "ES2020",
  "lib": ["DOM", "DOM.Iterable", "ESNext"],
  "allowJs": false,
  "skipLibCheck": true,
  "strict": true,
  "noEmit": true,

  "module": "ESNext",
  "moduleResolution": "Bundler",
  "resolveJsonModule": true,
  "isolatedModules": true,
  "jsx": "react-jsx",

